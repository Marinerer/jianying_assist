{
  "name": "jianyin_agent",
  "version": "5.0.1",
  "description": "剪映助手 - 智能视频创作工具",
  "author": "Your Name or Company",
  "main": "main.js",
  "homepage": "./",
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"pnpm run webpack-dev\" \"pnpm run electron-dev\"",
    "electron-dev": "cross-env ELECTRON_IS_DEV=true electron .",
    "webpack-dev": "webpack serve --config webpack.config.js",
    "build": "webpack --mode=production",
    "pack": "electron-builder",
    "dist": "pnpm run build && electron-builder",
    "postinstall": "electron-builder install-app-deps"
  },
  "build": {
    "appId": "com.jianyin.agent",
    "productName": "剪映助手",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "main.js",
      "preload.js",
      "package.json",
      "assets/**/*",
      "src/nodeapi/**/*",
      "locales/**/*",
      "jianyin/**/*",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "assets/icons/logo.icns"
    },
    "win": {
      "icon": "assets/icons/logo.ico",
      "target": "nsis"
    },
    "linux": {
      "icon": "assets/icons/logo.png",
      "target": "AppImage"
    }
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^6.5.1",
    "@fortawesome/free-solid-svg-icons": "^6.5.1",
    "@fortawesome/react-fontawesome": "^0.2.0",
    "ali-oss": "^6.18.1",
    "axios": "^1.7.2",
    "bootstrap": "^5.3.0",
    "bootstrap-icons": "^1.11.2",
    "fluent-ffmpeg": "^2.1.3",
    "fs-extra": "^11.2.0",
    "image-size": "^1.1.1",
    "jimp": "^0.22.12",
    "papaparse": "^5.4.1",
    "path-browserify": "^1.0.1",
    "prop-types": "^15.8.1",
    "qrcode": "^1.5.4",
    "react": "^17.0.2",
    "react-bootstrap": "^2.8.0",
    "react-bootstrap-icons": "^1.10.3",
    "react-copy-to-clipboard": "^5.1.0",
    "react-dom": "^17.0.2",
    "react-h5-audio-player": "^3.9.0",
    "react-lazy-load-image-component": "^1.6.0",
    "react-router-dom": "^5.3.0",
    "react-select": "^5.8.0",
    "react-swipeable": "^7.0.1",
    "react-toastify": "^9.1.3",
    "strip-bom": "^4.0.0",
    "subtitle": "^4.2.1",
    "tar": "^7.4.3",
    "universalify": "^2.0.1",
    "uuid": "^9.0.1",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@babel/core": "^7.22.0",
    "@babel/preset-env": "^7.22.0",
    "@babel/preset-react": "^7.22.0",
    "babel-loader": "^9.1.0",
    "concurrently": "^8.2.0",
    "cross-env": "^10.0.0",
    "css-loader": "^6.8.0",
    "electron": "^25.9.8",
    "electron-builder": "^24.6.0",
    "html-webpack-plugin": "^5.5.0",
    "style-loader": "^3.3.0",
    "wait-on": "^7.0.0",
    "webpack": "^5.88.0",
    "webpack-cli": "^5.1.0",
    "webpack-dev-server": "^4.15.0"
  }
}